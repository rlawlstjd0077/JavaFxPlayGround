<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.scene.image.ImageView?>
<?import javafx.geometry.Insets?>
<fx:root style="-fx-background-color: white;" type="AnchorPane" xmlns="http://javafx.com/javafx/8.0.171"
  xmlns:fx="http://javafx.com/fxml/1" prefWidth="350" prefHeight="150">
  <Label AnchorPane.topAnchor="0" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0" style="-fx-background-color:black; -fx-text-fill:white"
    text="기종 선택" alignment="CENTER" prefHeight="35"/>
  <VBox AnchorPane.topAnchor="40" AnchorPane.leftAnchor="10" AnchorPane.bottomAnchor="0" AnchorPane.rightAnchor="0" spacing="15">
    <HBox alignment="CENTER_LEFT" spacing="20">
      <Label text="기종"/>
      <ComboBox prefWidth="250" fx:id="comboBox"/>
    </HBox>
    <HBox alignment="BOTTOM_CENTER" spacing="30">
      <ImageView fx:id="imageView" fitHeight="180" fitWidth="100" />
      <Button fx:id="button" text="확인" prefWidth="80">
        <HBox.margin>
          <Insets bottom="10" left="10"/>
        </HBox.margin>
      </Button>
    </HBox>
  </VBox>
</fx:root>